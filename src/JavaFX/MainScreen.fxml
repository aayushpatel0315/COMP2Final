<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="JavaFX.MainScreenController">
   <top>
      <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="addTaskButton" mnemonicParsing="false" onAction="#addTask" text="Add Task">
               <font>
                  <Font size="18.0" />
               </font></Button>
            <Region prefHeight="100.0" prefWidth="48.0" HBox.hgrow="ALWAYS" />
<Button fx:id="exportButton" mnemonicParsing="false" onAction="#exportTasks" text="Export">
    <font>
        <Font size="18.0" />
    </font>
</Button>
            <Region prefHeight="100.0" prefWidth="39.0" HBox.hgrow="ALWAYS" />
            <Button fx:id="importButton" mnemonicParsing="false" onAction="#importTasks" text="Import">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
            <Region prefHeight="100.0" prefWidth="99.0" HBox.hgrow="ALWAYS" />
            <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#logout" text="Log Out">
               <font>
                  <Font size="18.0" />
               </font></Button>
         </children>
      </HBox>
   </top>
   <left>
      <VBox prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER"> <!-- Adjusted prefWidth -->
         <children>
            <Label alignment="CENTER" text="Tasks" textAlignment="CENTER">
               <font>
                  <Font size="18.0" />
               </font></Label>
            <ListView fx:id="tasksListView" VBox.vgrow="ALWAYS" />
         </children>
      </VBox>
   </left>
   <center>
      <VBox prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER"> <!-- Adjusted prefWidth -->
         <children>
<Label fx:id="taskTitleLabel" style="-fx-font-size: 20pt;" text="Title:">
               <font>
                  <Font size="18.0" />
               </font></Label>
<Label fx:id="taskDateLabel" style="-fx-font-size: 20pt;" text="Date:">
               <font>
                  <Font size="18.0" />
               </font></Label>
<Label fx:id="taskDescriptionLabel" style="-fx-font-size: 20pt;" text="Description:">
               <font>
                  <Font size="18.0" />
               </font></Label>
            <Button fx:id="completeTaskButton" mnemonicParsing="false" onAction="#completeTask" text="Completed">
               <font>
                  <Font size="18.0" />
               </font></Button>
         </children>
      </VBox>
   </center>
</BorderPane>

